{
    "appId": "com.tamilkadavulmurugan.app",
    "appName": "Tamil Kadavul Murugan",
    "webDir": "build",
    "plugins": {
        "SplashScreen": {
            "backgroundColor": "#084C28",
            "launchShowDuration": 3000,
            "launchAutoHide": true,
            "showSpinner": false,
            "androidScaleType": "FIT_CENTER",
            "splashFullScreen": true,
            "splashImmersive": true
        },
        "StatusBar": {
            "backgroundColor": "#0d5e38",
            "style": "LIGHT",
            "overlaysWebView": true
        },
        "MusicControls": {
            "notificationIcon": "ic_launcher"
        }
    }
}